<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The World - @ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>

    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <img src="~/images/ac.jpg" alt="logo" class="headshot" />
            <span id="username">@User.Identity.Name</span>
        }
        <ul class="nav">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="App" asp-action="About">Trips</a></li>
                <li><a asp-controller="Auth" asp-action="Contact">Logout</a></li>
            }
        </ul>
    </div>

    <div id="wrapper">
        <div id="main" class="container-fluid">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button id="sidebarToggle" class="btn btn-primary"><i class="fa fa-angle-left"></i></button>
                        </li>
                    </ul>
                    <a asp-controller="App" asp-action="Index" class="navbar-brand">The World</a>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#" class="btn btn-sm btn-info">
                                <i class="fa fa-save"></i>Save
                            </a>
                        </li>
                        <li>
                            <a href="#" class="btn btn-sm btn-info">
                                <i class="fa fa-print"></i>Print
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            l
            @RenderBody()
        </div>
    </div>


    <div id="footer" class="container-fluid">
        <div class="nav navbar-inverse navbar-fixed-bottom">
            <h4 class="text-center text-info">&copy; Jeff Solutions Ltd.</h4>
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("scripts", false)

</body>

</html>
